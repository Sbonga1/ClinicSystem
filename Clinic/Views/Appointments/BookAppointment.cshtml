@model IEnumerable<Clinic.Models.TimeSlot>

@{
    ViewBag.Title = "BookAppointment";
}

<h2>Book Appointment</h2>

@foreach (var timeSlot in Model)
{
    <div>
        <span>@timeSlot.StartTime.ToShortTimeString() - @timeSlot.EndTime.ToShortTimeString()</span>
        @using (Html.BeginForm("BookAppointment", "Appointments", new { timeSlotId = timeSlot.Id }))
        {
           <input type="submit" value="Book" class="btn btn-default" />
        }
    </div>
}

