@model Clinic.Models.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = @Model.Name;
}
<div class="inner-banner" id="home">
</div>
<!-- breadcrumbs -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Home</a>
        </li>

        <li class="breadcrumb-item">
            <a href="@Url.Action("ShopHome","Home")">Shop</a>
        </li>

        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>
<!-- //breadcrumbs -->
<div class="container">
    <h2>@Model.Name</h2>
    <br />
    <br />

    <div class="row">
        <div class="col-xs-12 col-md-9">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-xs-12 col-md-3" style="padding-bottom: 35px">
                        <div class="thumbnail" style="border: 3px solid #000000; width:206px; height:260px; " >
                            <img style="height: 150px;  width: 200px" class="img-responsive" src="~/@product.picture">
                            <div class="caption text-center">
                                <p style="text-align:center">
                                    <b>Name:</b> <span>@product.Name</span>
                                </p>
                                <p style="text-align:center">
                                    <b>Price:</b> <span>R @product.Price</span>
                                </p>
                                <div class="product-buttons">
                                    <a href="@Url.Action("ProductDetails", "Home", new { id = product.Id })" class="btn btn-primary btn-details">Details</a>
                                    @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = product.Id }, new { @class = "btn btn-info btn-cart" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
