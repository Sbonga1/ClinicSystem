@model IEnumerable<Clinic.Models.MedicalRecord>
@{
    ViewBag.Title = "MyMedicalRecord";
}




<div class="inner-banner" id="home">
</div>
<!-- breadcrumbs -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")">Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">My Medical Record</li>
    </ol>
</nav>
<!-- //breadcrumbs -->
<div class="container">
    <h2>Medical Record</h2>

   
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bloodPressure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.heartRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCrated)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bloodPressure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.heartRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Temperature)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diagnosis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCrated)
                </td>
                <td>
                    <a href="@Url.Content($"~/{"MedicalRecord" + item.Email + item.Id}.pdf")">Download PDF</a>
                </td>

            </tr>
        }

    </table>
</div>