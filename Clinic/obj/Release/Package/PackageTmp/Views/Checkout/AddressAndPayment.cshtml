﻿@model Clinic.Models.CustomerOrder
@{
    ViewBag.Title = "AddressAndPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts2/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts2/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>
@using (Html.BeginForm())
{
    <div class="weird">
        <h2>Address And Payment</h2>
        <fieldset>
            <legend>Shipping Information</legend>
            @Html.EditorForModel()
        </fieldset>
        <fieldset>
            <legend>Payment</legend>
            <p>
                We're running a promotion: all item is free
                with the promo code: "FREE"
            </p>
            <div class="editor-label">
                @Html.Label("Promo Code")
            </div>
            <div class="editor-field">
                @Html.TextBox("PromoCode")
            </div>
        </fieldset>

        <input type="submit" value="Submit Order" />
    </div>
}